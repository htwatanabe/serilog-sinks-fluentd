<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<RootNamespace>Serilog</RootNamespace>
		<PackRelease>true</PackRelease>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>Borys Iermakov, Koichi Tanaka, Klyse</Authors>
		<Title>Serilog.Sinks.Fluentd.v2</Title>
		<Description>
			Serilog adapter for Fluentd.
			Maintained fork of https://github.com/borisermakof/serilog-sinks-fluentd
		</Description>
		<PackageId>Serilog.Sinks.Fluentd.Revived</PackageId>
		<Version>0.7.0</Version>
		<DefaultLanguage>en-US</DefaultLanguage>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageTags>serilog;fluentd;sink;sinks;serilog sinks;serilog sink</PackageTags>
		<PackageIcon>serilog-sink-nuget.png</PackageIcon>
		<RepositoryUrl>https://github.com/klyse/serilog-sinks-fluentd</RepositoryUrl>
		<PackageProjectUrl>https://serilog.net/</PackageProjectUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MessagePack" Version="2.5.108" />
		<PackageReference Include="Serilog" Version="2.12.0" />
		<PackageReference Include="Serilog.Sinks.PeriodicBatching" Version="3.1.0" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="serilog-sink-nuget.png" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
